{% import "forms.twig" as forms %}

<form class="modal fade form-file" data-url="produtos/inventory/add" id="modal-set-inventory">
    <input type="hidden" name="id" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Alterar Estoque</h3>
                <button type="reset" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    O estoque atual do produto Ã© : <strong class="atual"></strong>
                </div>
                <div class="form-group">
                    {{forms.label('Quantidade:')}}
                    <input type="number" class="form-control" name="quant" required>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <button type="reset" class="btn btn-danger mr-1 label-left" data-dismiss="modal">
                        <div class="btn-label">
                            <i class="ti-close"></i>
                        </div>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success label-left">
                        <div class="btn-label">
                            <i class="ti-save"></i>
                        </div>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>