<div class="table-responsive m-0">
    <table class="table table-striped table-bordered table-hover m-0">
        <thead>
            <tr>
                <th width="70" class="text-center vertical-middle">#</th>
                <th class="vertical-middle">Título</th>
                <th width="200" class="text-center">Url Amigável</th>
                <th width="200" class="text-center">Dt. de Cadastro</th>
                <th width="200" class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for item in list %}
            <tr class="text-uppercase">
                <td class="text-center vertical-middle">
                    {{item.id}}
                </td>
                <td class="vertical-middle text-uppercase">
                    {{item.title}}
                </td>
                <td class="vertical-middle text-center text-uppercase">
                    {{item.slug}}
                </td>
                <td class="vertical-middle text-center text-uppercase">
                    {{item.date_insert|date('d/m/Y \\à\\s H:i')}}
                </td>
                <td class="text-center vertical-middle">
                    <div class="btn-group">
                        <button class="btn btn-info btn-editar" onclick="admin.editClick(this);" data-target="#modal-new-category" data-editar="{{item|json_encode}}">
                            <i class="ti-pencil" data-toggle="tooltip" title="Editar"></i>
                        </button>
                        <button class="btn btn-black" type="button" onclick="admin.removeClick(this);" data-link="produtos/categorias/delete" data-excluir="{{item.id}}">
                            <i class="ti-trash" data-toggle="tooltip" title="Excluir"></i>
                        </button>
                    </div>
                </td>
            </tr>
            {% else %}
                {% include 'helpers/not_found_tr.twig' with {'colspan' : 5} %}
            {% endfor %}

        </tbody>
    </table>
</div>