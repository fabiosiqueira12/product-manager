{% import "forms.twig" as forms %}

<form class="modal fade form-file" data-url="produtos/categorias/save" id="modal-new-category" enctype="multipart/form-data">
    <input type="hidden" name="id" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Categoria</h3>
                <button type="reset" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="modal-body pb-0 clearfix">
                <div class="row">
                    <div class="col-md-4 col-xs-12 form-group">
                        {{forms.label("Ordem")}}
                        <input type="number" class="form-control" name="order_by">
                    </div>
                    <div class="col-md-8 col-xs-12 form-group">
                        {{forms.label("Url Amigável:")}}
                        <input type="text" class="form-control" name="slug" placeholder="Manter em branco usa o título">
                    </div>
                </div>
                <div class="form-group">
                    {{forms.label("Título:")}}
                    <input type="text" class="form-control" name="title" required>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <button type="reset" class="btn btn-danger mr-1 label-left" data-dismiss="modal">
                        <div class="btn-label">
                            <i class="ti-close"></i>
                        </div>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success label-left">
                        <div class="btn-label">
                            <i class="ti-save"></i>
                        </div>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>