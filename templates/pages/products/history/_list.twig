<div class="table-responsive m-0">
    <table class="table table-striped table-bordered m-0">
        <thead>
            <tr>
                <th class="vertical-middle">Nome</th>
                <th width="260" class="text-center vertical-middle">Usuário</th>
                <th width="150" class="text-center">Quantidade</th>
                <th width="160" class="text-center">Data de Criação</th>
            </tr>
        </thead>
        <tbody>
            {% for produto in list %}
            <tr>
                <td class="vertical-middle text-uppercase">
                    {{produto.title_product}}
                </td>
                <td class="text-center text-uppercase vertical-middle">
                    {{produto.nome_user}}
                    <div><strong>Login:</strong> {{produto.login_user}}</div>
                </td>
                <td class="text-center vertical-middle font-weight-bold">
                    {{produto.quant}}
                </td>
                <td class="text-center vertical-middle">
                    {{produto.date_insert|date('d/m/Y \\à\\s H:i')}}
                </td>
            </tr>
            {% else %}
                {% include "helpers/not_found_tr.twig" with {colspan: 4} %}
            {% endfor %}
        </tbody>
    </table>
</div>