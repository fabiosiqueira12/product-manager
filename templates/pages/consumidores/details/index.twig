{% extends "layout.twig" %}

{% import "forms.twig" as forms %}

{% block title_page %}
    Detalhes | Gestor de Consumidores
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active">Gestor de Consumidores</li>
    <li class="breadcrumb-item active">Detalhes</li>
{% endblock %}

{% block links %}
    <button type="button" onclick="javascript:window.history.back()" class="btn btn-danger label-left">
        <div class="btn-label">
            <i class="ti-arrow-left"></i>
        </div>
        Voltar
    </button>
{% endblock %}

{% block main %}

    {% include "pages/consumidores/details/_form-principal.twig" with{
        consumidor: consumidor
    } %}

    {% include "pages/consumidores/details/_form-pf.twig" with {
        dadosPF: dadosPF,
        consumidor: consumidor
    } %}

    {% include "pages/consumidores/details/_form-pj.twig" with {
        dadosPJ: dadosPJ,
        consumidor: consumidor
    } %}

{% endblock %}

{% block script %}
    <script src="{{base_url_new()}}assets/js/location.js"></script>
    <script>
        $(document).ready(function(){
            $('.box').find('input').removeAttr('required');
        });
    </script>
{% endblock %}