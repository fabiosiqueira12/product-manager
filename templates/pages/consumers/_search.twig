{% import "forms.twig" as forms %}

<form class="custom-form mb-3 form-search-admin box bg-white" method="post" onsubmit="admin.search(this,event);"
    data-url="consumidores/search">
    <input type="hidden" name="page" value="1">
    <div class="box-block">
        <div class="row">
            <div class="col-xs-12 form-group">
                {{forms.label("Buscar por nome,e-mail,CPF ou CNPJ:")}}
                <input type="text" class="form-control" name="search">
            </div>
            <div class="col-md-4 col-xs-12 form-group">
                {{forms.label("Tipo:")}}
                <select name="type" class="form-control text-uppercase">
                    <option value="">-- TODOS --</option>
                    <option value="1">PESSOA</option>
                    <option value="2">EMPRESA</option>
                </select>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12 form-group">
                {{forms.label('DT/Inicial')}}
                <input type="date" class="form-control" name="date_insert">
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12 form-group">
                {{forms.label('DT/Final')}}
                <input type="date" class="form-control" name="date_final">
            </div>
        </div>
    </div>
    <div class="card-footer text-xs-right">
        <button type="submit" class="btn btn-primary label-left">
            <div class="btn-label">
                <i class="ti-filter"></i>
            </div>
            Filtrar
        </button>
    </div>
</form>