{% import "forms.twig" as forms %}

<form class="custom-form mb-3 form-search-admin box bg-white" method="post" onsubmit="admin.search(this,event);"
    data-url="pedidos/search">
    <input type="hidden" name="page" value="1">
    <div class="box-block">
        <div class="row">
            <div class="col-md-4 col-xs-12 form-group">
                {{forms.label("Buscar por c√≥digo:")}}
                <input type="text" class="form-control" name="code">
            </div>
            <div class="col-md-8 col-xs-12 form-group">
                {{forms.label("Buscar consumidor por nome,e-mail,CPF ou CNPJ:")}}
                <input type="text" class="form-control" name="search_consumer">
            </div>
            <div class="col-md-3 col-xs-12 form-group">
                {{forms.label("Forma de Pagamento:")}}
                <select name="type_payment" class="form-control text-uppercase">
                    <option value="">-- TODOS --</option>
                    {% for key,item in list_type_payment %}
                        <option value="{{key}}">{{item|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3 col-xs-12 form-group">
                {{forms.label("Status:")}}
                <select name="status" class="form-control text-uppercase">
                    <option value="">-- TODOS --</option>
                    {% for key,item in list_status_order %}
                        <option value="{{key}}">{{item|upper}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 form-group">
                {{forms.label('DT/Inicial')}}
                <input type="date" class="form-control" name="date_insert">
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 form-group">
                {{forms.label('DT/Final')}}
                <input type="date" class="form-control" name="date_final">
            </div>
        </div>
    </div>
    <div class="card-footer text-xs-right">
        <button type="submit" class="btn btn-primary label-left">
            <div class="btn-label">
                <i class="ti-filter"></i>
            </div>
            Filtrar
        </button>
    </div>
</form>