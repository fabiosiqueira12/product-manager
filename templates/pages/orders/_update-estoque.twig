{% import "forms.twig" as forms %}

<form class="modal fade form-file" data-url="pedidos/produtos/update-estoque" id="modal-update-estoque" enctype="multipart/form-data">
    <input type="hidden" name="id_product">
    <input type="hidden" name="estoque">
    <input type="hidden" name="qtde_atual">
    <input type="hidden" name="id_order" value="{{order.getId()}}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Alterar Quantidade</h3>
                <button type="reset" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info font-weight-bold">Estoque Atual: <span class="qtd-estoque"></span></div>
                <div class="form-group">
                    {{forms.label('Quantidade:')}}
                    <input type="number" class="form-control" name="quantidade">
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <button type="reset" class="btn btn-danger label-left" data-dismiss="modal">
                        <div class="btn-label">
                            <i class="ti-close"></i>
                        </div>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success label-left">
                        <div class="btn-label">
                            <i class="ti-save"></i>
                        </div>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>