{% import "forms.twig" as forms %}

<form class="modal fade form-file" data-url="usuarios/save" id="modal-new-user" enctype="multipart/form-data">
    {% if select_type is empty %}
        <input type="hidden" name="id_type" value="{{type}}">
    {% endif %}
    {% if withEmpresa is not empty %}
        <input type="hidden" name="id_empresa" value="{{company_logged().getId()}}">
    {% endif %}
    <input type="hidden" name="token" />
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Usuário</h3>
                <button type="reset" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="modal-body pb-0 clearfix">
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        {{ forms.label('Login','No máximo 15 caracteres') }}
                        <input type="text" name="login" required maxlength="20" class="form-control" />
                    </div>
                    <div class="col-md-6 col-xs-12 form-group">
                        {{forms.label('E-mail')}}
                        <input type="email" class="form-control" name="email" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-xs-12 form-group">
                        {{forms.label('Nome')}}
                        <input type="text" class="form-control" name="nome" required>
                    </div>
                    <div class="col-md-4 col-xs-12 form-group">
                        {{ forms.label('Celular/Whatsapp') }}
                        <input type="text" name="telefone" required class="form-control mask-telefone" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12">
                        {{ forms.label('Senha','No mínimo 6 caracteres') }}
                        <input type="password" placeholder="Digite a senha" name="senha" minlength="6" maxlength="20" class="form-control" />
                    </div>
                    <div class="form-group col-md-6 col-xs-12">
                        {{ forms.label('Repita a Senha') }}
                        <input type="password" name="rsenha" minlength="6" maxlength="20" placeholder="Repita a senha" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <div>
                    <button type="reset" class="btn btn-danger label-left" data-dismiss="modal">
                        <div class="btn-label">
                            <i class="ti-close"></i>
                        </div>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success label-left">
                        <div class="btn-label">
                            <i class="ti-save"></i>
                        </div>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>