<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta name="viewport" content="width=device-width" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>Contato</title>
    </head>
    <body style="margin:0px; background: #e8ebf0;">
        <div width="100%" style="background: #e8ebf0; padding: 0px 0px; font-family:arial; line-height:28px; height:100%;  width: 100%; color: #333;">
            <div style="max-width: 700px; padding: 50px 0; margin: 0px auto; font-size: 14px">
                <div style="padding: 30px; background: #fff;">
                    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
                        <tbody>
                            <tr>
                                <td>
                                    <p>{{assunto}}</p>
                                    <hr>
                                    <p style="font-weight : bold;margin-bottom: 4px;text-transform : uppercase;font-size : 13px;margin-bottom : 2px">Nome:</p>
                                    <p>{{nome}}</p>
                                    <p style="font-weight : bold;margin-bottom: 4px;text-transform : uppercase;font-size : 13px;margin-bottom : 2px">E-mail:</p>
                                    <p>{{email}}</p>
                                    <p style="font-weight : bold;margin-bottom: 4px;text-transform : uppercase;font-size : 13px;margin-bottom : 2px">Telefone:</p>
                                    <p>{{telefone}}</p>
                                    {% if cpf is not empty  %}
                                        <p style="font-weight : bold;margin-bottom: 4px;text-transform : uppercase;font-size : 13px;margin-bottom : 2px">CPF:</p>
                                        <p>{{cpf}}</p>
                                    {% endif %}
                                    <p style="font-weight : bold;margin-bottom: 4px;text-transform : uppercase;font-size : 13px;margin-bottom : 2px">Mensagem:</p>
                                    <p>{{mensagem != "" ? mensagem : ''}}</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="text-align: center; font-size: 12px; color: #b2b2b5; margin-top: 20px">
                    <p>
                        GNC NEWS
                        <br>
                        <a href="{{base_link}}" style="color: #b2b2b5; text-decoration: underline;">Acessar</a>
                    </p>
                </div>
            </div>
        </div>
    </body>
</html>