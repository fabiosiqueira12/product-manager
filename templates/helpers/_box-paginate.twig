<div class="box bg-white">
    <div class="card-body p-0 list-box">
        {% include folderList with paramsList %}
    </div>
    <div class="card-footer bg-white">
        {% if list.actual > 1 and list.results|length == 0 %}
            <button type="button" onclick="admin.clearPage(this);" class="btn btn-primary label-left">
                <div class="btn-label">
                    <i class="ti-reload"></i>
                </div>
                Voltar primeira página
            </button>
        {% else %}
            {% include "/helpers/_pagination-new.twig" with {
                totalPages : list.totalPages, 
                url : urlPaginate,
                actual: list.actual,
                inicio : list.inicio,
                fim: list.fim
            } %}
            {% if list.totalPages > 1 %}
                <div class="info float-xs-right"
                    style="margin-top: -33px;font-weight: bold;text-transform: uppercase;font-size: 13px;">
                    Exibindo página de {{actual}} até {{list.results|length}} de {{list.totalCount}}
                </div>
            {% else %}
                <div class="info float-xs-right" style="font-weight: bold;text-transform: uppercase;font-size: 13px;">
                    Exibindo de {{actual}} até {{list.results|length}} de {{list.results|length}}
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>