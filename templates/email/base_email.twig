{% set extesion_image = '.png' %}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta name="viewport" content="width=device-width" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block title %}{% endblock %} | {{return_dados().title}}</title>
        <style>
            fieldset p,h4,h3,h2{
                margin-top: 5px;
                margin-bottom : 5px;
                line-height: 1.3rem;
            }
        </style>
    </head>
    <body style="margin:0px; background: #e8ebf0;padding-top : 50px;padding-left : 15px;padding-right : 15px;width : 100%">
        <div width="100%" style="background: #e8ebf0; padding: 0px 0px; font-family:arial; line-height:28px; height:100vh;  width: 100%; color: #333;"> 
            <div style="max-width: 700px;margin: 0px auto; font-size: 1.1rem;width : 100%">
                <img style="box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);margin-bottom:-7px" src="{{base_url_new()}}assets/img/topo-email.jpg?v=1.2.5" alt="Topo Email">
                {% block main %}{% endblock %}
                <div style="text-align: center;padding-top : 30px;padding-bottom : 15px;border-bottom : 1px solid #ddd">
                    {% if return_dados().link_playstore is not empty %}
                        <a href="{{return_dados().link_playstore}}" style="text-decoration : none">
                            <img width="150" style="margin-right : 5px" height="45" src="{{base_url_new()}}/assets/img/lojas/play-store{{extesion_image}}">
                        </a>
                    {% endif %}
                    {% if return_dados().link_applestore is not empty %}
                        <a href="{{return_dados().link_applestore}}" style="text-decoration : none">
                            <img width="150" height="45" src="{{base_url_new()}}/assets/img/lojas/apple-store{{extesion_image}}">
                        </a>
                    {% endif %}
                </div>
                <div style="text-align: center;padding-top : 20px;padding-bottom : 10px;border-bottom : 1px solid #ddd">
                    {% if return_dados().facebook is not empty %}
                        <a href="{{return_dados().facebook}}" style="text-decoration : none">
                            <img width="29" height="29" style="margin-right : 10px" src="{{base_url_new()}}/assets/img/social/facebook{{extesion_image}}">
                        </a>
                    {% endif %}
                    {% if return_dados().instagram is not empty %}
                        <a href="{{return_dados().instagram}}" style="text-decoration : none">
                            <img width="29" height="29" style="margin-right : 10px" src="{{base_url_new()}}/assets/img/social/instagram{{extesion_image}}">
                        </a>
                    {% endif %}
                    {% if return_dados().twitter is not empty %}
                        <a href="{{return_dados().twitter}}" style="text-decoration : none">
                            <img width="29" height="29" style="margin-right : 10px" src="{{base_url_new()}}/assets/img/social/twitter{{extesion_image}}">
                        </a>
                    {% endif %}
                    {% if return_dados().whatsapp is not empty %}
                        <a href="{{return_dados().whatsapp}}" style="text-decoration : none">
                            <img width="33" height="33" src="{{base_url_new()}}/assets/img/social/whatsapp{{extesion_image}}">
                        </a>
                    {% endif %}
                </div>
                <div style="text-align: center; font-size: 14px;font-weight : bold; color: #99999a; margin-top: 20px">
                    <p>
                        Â© 2020 {{return_dados().title}} - Todos os direitos reservados.
                    </p>
                </div>
            </div>
        </div>
    </body>
</html>
